<div class="container">
<h1>Yelp en pourri</h1>
</div>

<div class="container py-5">
  <ol>
    <% @restaurants.each do |resto| %>
    <h3><%= link_to resto.name, restaurant_path(resto) %></h3>
    <p><%= resto.address %></p>
    <p><%= resto.phone_number %></p>
    <%end %>
  </ol>
</div>

<div class="container">
<%= link_to "Add a new restaurant", new_restaurant_path %></div>
</div>
